<!DOCTYPE html>
<html>

<head>
  <title>Trello</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="nav-bar">Trello
</div>


  <% if flash[:error] %>
  <ul>
    <% flash[:error].each do |error| %>
